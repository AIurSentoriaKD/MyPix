<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_marginBottom="1dp"
    android:layout_height="240dp"
    android:foreground="@drawable/basic_illust_cardview_foreground"
    >

    <ImageView
        android:id="@+id/illustview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/illustration"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/login_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggle_isliked_basicIllust"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/toggle_selector_fav"
            android:elevation="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

</RelativeLayout>
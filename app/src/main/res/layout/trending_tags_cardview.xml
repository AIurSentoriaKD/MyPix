<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:foreground="@drawable/rankingcard_foreground"
    >
    <ImageView
        android:id="@+id/home_trending_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/trendingtag_holder"
        />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/rankingcard_gradient"
        android:gravity="bottom"

        android:orientation="vertical">

        <TextView
            android:id="@+id/home_trending_tagname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="#TagName"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/home_trending_tagtranslate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="TagTrad"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>